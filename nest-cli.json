{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../config/*.yml",
        "outDir": "./dist/config"
      },
      {
        "include": "../db/migrations/*.js",
        "outDir": "./dist/db"
      }
    ]
  }
}
